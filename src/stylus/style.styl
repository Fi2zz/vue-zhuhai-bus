@charset "utf-8"
*
  box-sizing border-box
  margin 0
  padding 0

html,body
  height 100%
  overflow hidden

body
  background #222

  
#app
  max-width 480px
  margin auto
  background #fff
  padding 16px
  height 100%
  min-height 100%
  overflow-y scroll
.view
  padding-top: 44px

.view-header

  position: fixed
  height: 44px
  top: 0
  right: 0
  left: 0
  &-wrap
    position: relative
    width: 100%
    max-width 480px
    margin auto
    height 44px
    line-height 44px
    border-bottom 1px #ddd solid

.view-form-control


  height: 44px
  line-height: 44px

  .form-control
    display block
    border 1px #ddd solid  
    width 100%
    height 44px
    line-height 44px
